@model List<MyPortfolio1.DAL.Entities.PortfolioItem>
<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolyo<h3>
            <h1>Son Projelerim</h1>

                    <p class="lead">Merhaba, ben Reha. Yazılımcı olarak, ağırlıklı olarak C#, .NET, SQL, HTML ve CSS kullanarak projeler geliştiriyorum. Yerel işletmeler için özelleştirilmiş web çözümleri sunma konusunda deneyimliyim. Amacım, kullanıcı dostu ve işlevsel web siteleri tasarlayarak işletmelerin dijital varlıklarını güçlendirmektir.</p>
        </div>
    </div>
   
        <div class="row masonry-wrap">
            <div class="masonry">
            @foreach (var item in Model)
            {
                <div class="masonry__brick">
                    <div class="item-folio">

                        <div class="item-folio__thumb">
                            <a href="@item.ImageURL" class="thumb-link" title="The Beetle Car" data-size="1050x700">
                                <img src="@item.ImageURL"
                                     srcset="@item.ImageURL 1x,@item.ImageURL 2x" alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @item.Title
                            </h3>
                            <p class="item-folio__cat">
                                @item.SubTitle
                            </p>
                        </div>

                        <a href="@item.URL" class="item-folio__project-link" title="Project link">
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@item.Description</p>
                        </div>

                    </div> <!-- end item-folio -->
                
                </div> <!-- end masonry__brick -->
                }

            </div>
        </div>

</section>